<div class="cve-list-container">
    <div class="list-header">
        <h2><i class="fas fa-list"></i> CVE Results</h2>
        <span class="result-count">{{ cves|length }} vulnerabilities found</span>
    </div>

    <div class="cve-list">
        {% for cve in cves %}
        <div class="cve-list-item">
            <div class="cve-list-header">
                <div class="cve-id-section">
                    <i class="fas fa-shield-alt"></i>
                    <span class="cve-id">{{ cve.cve_no|default('N/A') }}</span>
                </div>
                <div class="cve-severity">
                    <span class="severity-badge severity-{{ cve.exploit_code_maturity|lower|replace(' ', '-')|default('unknown') }}">
                        {{ cve.exploit_code_maturity|default('UNKNOWN') }}
                    </span>
                </div>
            </div>

            <div class="cve-title">
                <h3>{{ cve.cve_title|default('Untitled Vulnerability') }}</h3>
            </div>

            <div class="cve-description">
                {% if cve.description %}
                    <p>{{ cve.description[:200] }}{% if cve.description|length > 200 %}...{% endif %}</p>
                {% else %}
                    <p class="text-muted">No description available</p>
                {% endif %}
            </div>

            <div class="cve-list-metadata">
                <div class="metadata-chip">
                    <i class="fas fa-calendar"></i>
                    <span>{{ cve.valid_from[:10] if cve.valid_from else 'N/A' }}</span>
                </div>
                {% if cve.keywords %}
                <div class="metadata-chip">
                    <i class="fas fa-tag"></i>
                    <span>{{ cve.keywords }}</span>
                </div>
                {% endif %}
                {% if cve.classifications_location %}
                <div class="metadata-chip">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>{{ cve.classifications_location }}</span>
                </div>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>
