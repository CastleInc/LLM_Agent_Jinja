<div class="cve-summary">
    <div class="summary-header">
        <h2><i class="fas fa-shield-alt"></i> {{ cve.cve_no|default('N/A') }}</h2>
        <span class="severity-badge severity-{{ cve.exploit_code_maturity|lower|replace(' ', '-')|default('unknown') }}">
            {{ cve.exploit_code_maturity|default('UNKNOWN') }}
        </span>
    </div>

    <h3 class="cve-title">{{ cve.cve_title|default('Untitled Vulnerability') }}</h3>

    <div class="summary-content">
        <p><strong>Description:</strong> {{ cve.description|default('No description available.') }}</p>

        <div class="summary-metadata">
            <p><strong>Keywords:</strong> {{ cve.keywords|default('N/A') }}</p>
            <p><strong>Classification:</strong> {{ cve.classifications_location|default('N/A') }}</p>
            <p><strong>Attack Type:</strong> {{ cve.classifications_attack_type|default('N/A') }}</p>
            <p><strong>Impact:</strong> {{ cve.classifications_impact|default('N/A') }}</p>
            <p><strong>Valid From:</strong> {{ cve.valid_from[:10] if cve.valid_from else 'N/A' }}</p>
        </div>
    </div>
</div>
